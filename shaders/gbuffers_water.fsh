#version 400

//--// Outputs //----------------------------------------------------------------------------------------//

/* DRAWBUFFERS:0 */

layout (location = 0) out vec4 data0;
layout (location = 1) out vec4 data1;

//--// Inputs //-----------------------------------------------------------------------------------------//

in vec4 tint;
in vec2 texCoord;

//--// Uniforms //---------------------------------------------------------------------------------------//

uniform sampler2D albedo;

//--// Functions //--------------------------------------------------------------------------------------//

void main() {
	data0 = texture(albedo, texCoord) * tint;
	data1 = vec4(vec3(1.0), data0.a);
}
