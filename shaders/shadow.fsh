#version 420

//--// Outputs //----------------------------------------------------------------------------------------//

/* DRAWBUFFERS:0 */

layout (location = 0) out vec4 color;

//--// Inputs //-----------------------------------------------------------------------------------------//

in vec4 tint;
in vec2 baseUV;

//--// Uniforms //---------------------------------------------------------------------------------------//

uniform sampler2D base;

//--// Functions //--------------------------------------------------------------------------------------//

void main() {
	color = texture(base, baseUV) * tint;
	if (color.a < 0.102) discard; // ~ 26 / 255
}
